modules = ["nodejs-20", "bash", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "pkg-config", "xsimd"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Final_script && python enhanced_server.py"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34873
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd Final_script && python enhanced_server.py & cd frontend && npm start && wait"]
build = ["bash", "-c", "cd frontend && npm run build"]
